meta {
  name: Get a specific candidate
  type: http
  seq: 4
}

get {
  url: {{baseUrl}}/elections/:electionId/candidates/:candidateId
  body: none
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 400
  res.body: isJson
}

tests {
  test("Should contain error message", function () {
    const body = res.getBody();
  
    expect(body).to.have.property("message");
    expect(body.message).to.be.a("string");
    expect(body.message).to.include("Bad Request");
  });
  
}
