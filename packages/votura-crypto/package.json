{
  "name": "@votura/votura-crypto",
  "version": "0.0.4",
  "description": "A package containing the cryptographic algorithms used in the votura project.",
  "keywords": [
    "cryptographic"
  ],
  "homepage": "https://se-uulm.github.io/votura/",
  "bugs": {
    "url": "https://github.com/SE-UUlm/votura/issues"
  },
  "license": "MIT",
  "author": {
    "name": "University of Ulm",
    "url": "https://www.uni-ulm.de"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SE-UUlm/votura.git"
  },
  "scripts": {
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "test": "vitest run --coverage",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@repo/eslint-config": "*",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "@arethetypeswrong/cli": "^0.17.4",
    "@changesets/cli": "^2.29.2",
    "@vitest/coverage-v8": "^3.1.3",
    "vitest": "^3.1.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "bigint-crypto-utils": "^3.3.0"
  },
  "packageManager": "npm@11.3.0",
  "engines": {
    "node": ">=22.15.0"
  },
  "os": [
    "darwin",
    "linux",
    "win64"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "devEngines": {
    "runtime": {
      "name": "node",
      "onFail": "error"
    },
    "packageManager": {
      "name": "npm",
      "onFail": "error"
    }
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "default": "./dist/*.js"
    }
  }
}
