{
  "name": "@repo/votura-validators",
  "version": "0.0.0",
  "description": "A package containing the validators for data exchanged in the votura project.",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SE-UUlm/votura.git"
  },
  "scripts": {
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "persist-schema": "tsx ./src/schema/persistSchema.ts",
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "eslint": "^9.25.1",
    "openapi-types": "^12.1.3",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "zod": "^3.25.42"
  },
  "packageManager": "npm@11.3.0",
  "engines": {
    "node": ">=22.15.0"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  }
}
