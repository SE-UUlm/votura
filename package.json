{
  "name": "@votura/votura-crypto",
  "version": "0.0.3",
  "description": "A package containing the cryptographic algorithms used in the votura project.",
  "homepage": "https://github.com/SE-UUlm/votura-crypto",
  "bugs": {
    "url": "https://github.com/SE-UUlm/votura-crypto/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SE-UUlm/votura-crypto.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@changesets/cli": "^2.29.2",
    "@eslint/js": "^9.25.1",
    "@eslint/json": "^0.12.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.0.0",
    "prettier": "3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vitest": "^3.1.2"
  }
}
