meta {
  name: Create a new election
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/elections
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "name": "My test election",
    "description": "My description",
    "private": true,
    "votingStartAt": "2025-06-16T14:30:00Z",
    "votingEndAt": "2025-06-18T14:30:00Z",
    "allowInvalidVotes": false
  }
}

assert {
  res.status: eq 201
  res.body: isJson
}

tests {
  test("Should contain error message", function () {
    const body = res.getBody();
  
    expect(body).to.include.all.keys("id", "createdAt", "modifiedAt", "name", "description", "private", "votingStartAt", "votingEndAt", "allowInvalidVotes", "configFrozen");
  });
  
}
