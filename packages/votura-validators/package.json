{
  "name": "@repo/votura-validators",
  "version": "0.0.0",
  "description": "A package containing the validators for data exchanged in the votura project.",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SE-UUlm/votura.git"
  },
  "scripts": {
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "test": "vitest run --coverage",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@repo/eslint-config": "*",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "@arethetypeswrong/cli": "^0.17.4",
    "@vitest/coverage-v8": "^3.1.3",
    "vitest": "^3.1.2",
    "typescript": "^5.8.2"
  },
  "packageManager": "npm@11.3.0",
  "engines": {
    "node": ">=22.15.0"
  },
  "type": "module",
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "default": "./dist/*.js"
    }
  }
}
